{% extends 'base.html.twig' %}

{% block title %}Gestionnaires - {{ parent() }}{% endblock %}

{% block pageTitle %}
    {% if society is defined %}
        Gestion des Utilisateurs
    {% else %}
        Gestion des Gestionnaires
    {% endif %}
{% endblock %}

{% block body %}
    <div>
        {% if society is defined %}
            <h2 class="mt-4">{{ society.name }}</h2>
        {% endif %}
        <button class="createButton btn btn-lg btn-primary">
            <i class="fas fa-user-plus mr-2"></i> Ajouter un gestionnaire</button>
        <hr>
        {% include 'user/_form.html.twig' %}
        {% include 'user/_list.html.twig' %}
    </div>
{% endblock %}
