{{ form_start(form) }}
<fieldset class="border p-3 px-5">
    <legend>Ajout d'un participant</legend>
    <p class="requiredFields">(*) Champs obligatoires</p>
    <div class="row">
        <div class="col-md-3">
            {{ form_label(form.name, 'Nom') }}<span class="requiredFields"> *</span>
            {{ form_widget(form.name) }}
        </div>
        <div class="col-md-3">
            {{ form_label(form.firstname, 'Prénom') }}<span class="requiredFields"> *</span>
            {{ form_widget(form.firstname) }}
        </div>
        <div class="col-md-3">
            {{ form_row(form.phoneNumber, {'label': 'Numéro de portable'}) }}
        </div>
        <div class="col-md-3">
            {{ form_row(form.mail, {'label': 'Email'}) }}
        </div>
    </div>
    <button class="btn btn btn-primary btn-block">{{ button_label|default('Valider') }}</button>
</fieldset>
{{ form_end(form) }}