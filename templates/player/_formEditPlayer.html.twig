<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="modalEdit" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalEdit">Edition d'un participant</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="formEdit">
                {{ form_start(formEdit) }}
                {{ form_row(formEdit.name, {'id': 'player_name_edit', 'label': 'Nom'}) }}
                {{ form_row(formEdit.firstname, {'id': 'player_firstname_edit', 'label': 'Prénom'}) }}
                {{ form_row(formEdit.phoneNumber, {'id': 'player_phoneNumber_edit', 'label': 'Numéro de portable'}) }}
                {{ form_row(formEdit.mail, {'id': 'player_mail_edit','label': 'Email'}) }}
                <button class="btn btn-primary btn-lg btn-block">{{ button_label|default('Valider') }}</button>
                {{ form_widget(formEdit._token, {'id': 'player__token_edit'}) }}
                {{ form_end(formEdit) }}
            </div>
        </div>
    </div>
</div>