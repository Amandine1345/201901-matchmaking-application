<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="modalEdit" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalEdit">Edition d'un participant</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="formEdit">
                {{ form_start(formEdit) }}
                <p class="requiredFields">(*) Champs obligatoires</p>
                {{ form_label(formEdit.name, 'Nom') }}<span class="requiredFields"> *</span>
                {{ form_widget(formEdit.name, {'id': 'player_name_edit'}) }}
                {{ form_label(formEdit.firstname, 'Prénom') }}<span class="requiredFields"> *</span>
                {{ form_widget(formEdit.firstname, {'id': 'player_firstname_edit'}) }}
                {{ form_label(formEdit.phoneNumber, 'Numéro de portable') }}
                {{ form_widget(formEdit.phoneNumber, {'id': 'player_phone_edit'}) }}
                {{ form_label(formEdit.mail, 'Email') }}
                {{ form_widget(formEdit.mail, {'id': 'player_mail_edit'}) }}
                <hr>
                <button class="btn btn-primary btn-lg btn-block">{{ button_label|default('Valider') }}</button>
                {{ form_widget(formEdit._token, {'id': 'player__token_edit'}) }}
                {{ form_end(formEdit) }}
            </div>
        </div>
    </div>
</div>