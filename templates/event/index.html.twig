{% extends 'base.html.twig' %}

{% block title %}List of events{% endblock %}



{% block body %}
<div class="event_list container">
    <h1 class="text-center">Liste des événements</h1>

    <a href="{{path('event_add')}}" class="btn btn-primary">Ajouter un événement</a>

        {% for event in events %}
            <div class="row d-flex align-items-center">
                <div class="col-1"><span class="badge badge-info">[{{ event.date|date('d/m/Y') }}]</span></div>
                <div class="col-10">{{ event.title }}</div>
                <div class="col-1">
                    <form method="post" action="{{ path('event_delete', {'id': event.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cet événement ?');">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                        <button class="btn btn-primary"><i class="fas fa-times"></i></button>
                    </form>
                </div>
           </div>
        {% endfor %}

</div>
{% endblock %}
