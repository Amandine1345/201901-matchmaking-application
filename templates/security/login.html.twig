{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ parent() }}{% endblock %}

{% block pageTitle %}Application MatchMaking{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form method="post" class="col-lg-6 mt-5 mx-auto">
        <fieldset class="border py-3">
            <legend class="d-inline">Connexion</legend>
            <div class="my-3 d-flex justify-content-center">
                <label for="inputEmail" class="sr-only">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                       class="form-control col-lg-8 text-center"
                       placeholder="Email" required autofocus>
            </div>

            <div class="mb-3 d-flex justify-content-center">
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control col-lg-8 text-center"
                       placeholder="Password"
                       required>
            </div>

            <div class="d-flex justify-content-center">
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <button class="btn btn-lg btn-primary" type="submit">
                    S'identifier
                </button>
            </div>
        </fieldset>
    </form>
{% endblock %}
